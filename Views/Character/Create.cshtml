            var temp = document.getElementById('levelInput').value;
            $('#characterLevel').text(temp);
        });
        $("#initiativeInput").on("input", function(){
            var temp = document.getElementById('initiativeInput').value;
            $('#characterInitiative').text(temp);
        });
        $("#speedInput").on("input", function(){
            var temp = document.getElementById('speedInput').value;
            $('#characterSpeed').text(temp);
        });
        $("#ACInput").on("input", function(){
            var temp = document.getElementById('ACInput').value;
            $('#characterAC').text(temp);
        });
        $("#HPInput").on("input", function(){
            var temp = document.getElementById('HPInput').value;
            $('#characterHP').text(temp);
        });
        $("#descriptionInput").keyup(function(){
            var temp = document.getElementById('descriptionInput').value;
            $('.characterDescription').text(temp);
        });

        // Function for regulating if character is public or not from the isPublic switch
        // Sets character to public by default
        document.getElementById('fillIsPublic').value = 1;
        $('#checkIsPublic').prop('checked',true);
        $('#checkIsPublic').change(function(){
            if($('#checkIsPublic').is(':checked')){
               document.getElementById('fillIsPublic').value = 1;
            }
            else{
                document.getElementById('fillIsPublic').value = 0;
            }
        });

        $('#form').submit(function(){
            var tempDesc = $('.characterDescription').text();
            if(tempDesc != ""){
                document.getElementById('fillDescription').value = tempDesc;
            }
            else{
                document.getElementById('fillDescription').value = "This character is ready for an adventure!";
            }

            var tempSkills = $('.characterSkills').text();
            if(tempSkills != ""){
                tempSkills = tempSkills.replace(/,\s*$/, "");
                document.getElementById('fillSkills').value = tempSkills;
            }
            else{
                document.getElementById('fillSkills').value = "None";
            }
        });
    });
</script>


<div class="p-5 min-vh-100 mx-3 aboutBackground">
    @{
        ViewData["Title"] = "Create";
        var h1Title = "Create a New Character";
    }

