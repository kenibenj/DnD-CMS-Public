            }
            else{
                temp = temp.replace("Deception, ", "");
            }
            $('.characterSkills').text(temp);
        });

        //Unique function for allowing users to create their own skill/s
        // Unique skill/s is dynamically removed, edited, and then readded whenever it is changed by the user
        var track = "";
        $("#checkOther").keyup(function(){
            var temp = $('.characterSkills').text()
            temp = temp.replace("None", "");
            temp = temp.replace(track, "");
            var otherTemp = document.getElementById('checkOther').value;
            if(otherTemp != ""){
                otherTemp = otherTemp + ", ";
            }
            $('.characterSkills').text(temp + otherTemp);
            track = otherTemp;
        });

        // Functions that dynamically changed features on the character card as their respective input boxes are adjusted by the user
        $("#nameInput").keyup(function(){
            var temp = document.getElementById('nameInput').value;
            $('#characterName').text(temp);
